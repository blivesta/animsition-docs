<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Animsition Sandbox - Callback</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animsition/3.5.2/css/animsition.min.css">

  <!-- animsition docs css -->
  <link rel="stylesheet" href="{{file.meta.base_url}}css/{{pkg.name}}.css">
</head>

{{#is file.meta.type "overlay"}}
<body class="sandbox animsition-overlay-wrapper">
<div class="animsition animsition-overlay">
{{else}}
<body class="sandbox">
{{/is}}

<header>
  {{#is file.meta.title "Callback1"}}
  <h1>Animsition Sandbox - Callback1</h1>
  <ul>
    <li><a class="animsition-link" href="../callback2">Callback2</a></li>
    <li><a class="animsition-link" href="../overlay1">Overlay1</a></li>
    <li><a class="animsition-link" href="../../">Home</a></li>
  </ul>
  {{/is}}
  {{#is file.meta.title "Callback2"}}
  <h1>Animsition Sandbox - Callback2</h1>
  <ul>
    <li><a class="animsition-link" href="../callback1">Callback1</a></li>
    <li><a class="animsition-link" href="../overlay1">Overlay1</a></li>
    <li><a class="animsition-link" href="../../">Home</a></li>
  </ul>
  {{/is}}
  {{#is file.meta.title "Overlay1"}}
  <h1>Animsition Sandbox - Overlay1</h1>
  <ul>
    <li><a class="animsition-link" href="../callback1">Callback1</a></li>
    <li><a class="animsition-link" href="../overlay2">Overlay2</a></li>
    <li><a class="animsition-link" href="../../">Home</a></li>
  </ul>
  {{/is}}
  {{#is file.meta.title "Overlay2"}}
  <h1>Animsition Sandbox - Overlay2</h1>
  <ul>
    <li><a class="animsition-link" href="../callback1">Callback1</a></li>
    <li><a class="animsition-link" href="../overlay1">Overlay1</a></li>
    <li><a class="animsition-link" href="../../">Home</a></li>
  </ul>
  {{/is}}
</header>

{{{block "content"}}}

{{#is file.meta.type "overlay"}}
</div>
{{/is}}

<div class="sandbox-carbon">
  <script async type="text/javascript" src="//cdn.carbonads.com/carbon.js?zoneid=1673&serve=C6AILKT&placement=blivesta" id="_carbonads_js"></script>
</div>

<!-- Google analytics -->
<script src="http://git.blivesta.com/js/ga.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/animsition/3.5.2/js/jquery.animsition.min.js"></script>


<script>
$(document).ready(function () {
{{#is file.meta.title "Callback1"}}
  $(".animsition").animsition().one('animsition.start',function(){
    $(this).find('.animsition-state').text('Animsition Sart');
  }).one('animsition.end',function(){
    $(this).addClass('animsition--end');
    $(this).find('.animsition-state').text('').text('Animsition End');
    $(this).find('.animsition-child--first').addClass('fade-in-up-sm');
    $(this).find('.animsition-child--second').addClass('fade-in-down-sm');
  })
{{/is}}
{{#is file.meta.title "Callback2"}}
  $(".animsition").animsition()
    .one('animsition.start',function(){
      $(this).find('.animsition-state').text('Animsition Sart');
    })
    .one('animsition.end',function(){
      $(this).addClass('animsition--end');
      $(this).find('.animsition-state').text('').text('Animsition End');
      $(this).find('.animsition-child--first').addClass('fade-in-right-sm');
      $(this).find('.animsition-child--second').addClass('fade-in-left-sm');
  });
{{/is}}
{{#is file.meta.title "Overlay1"}}
  $(".animsition-overlay").animsition({
    // loading:   false,
    overlay:   true,
    inClass:   'overlay-slide-in-top',
    outClass:  'overlay-slide-out-top',
  }).one('animsition.start',function(){
    $(this).find('.animsition-state').text('Animsition Sart');
    $('.animsition-overlay-wrapper').addClass('animsition-overlay-wrapper--start')
  }).one('animsition.end',function(){
    $(this).find('.animsition-state').text('').text('Animsition End');
    $(this).find('section').addClass('animsition--end');
  });
{{/is}}
{{#is file.meta.title "Overlay2"}}
  $(".animsition-overlay").animsition({
    overlay:   true,
    inClass:   'overlay-slide-in-top',
    outClass:  'overlay-slide-out-top',
  }).one('animsition.start',function(){
    $('.animsition-overlay-wrapper').addClass('animsition-overlay-wrapper--start');
    $(this).find('.animsition-state').text('Animsition Sart');
  }).one('animsition.end',function(){
    $(this).find('.animsition-state').text('').text('Animsition End');
    $(this).find('section').addClass('animsition--end');
  });
{{/is}}
});
</script>

</body>
</html>
